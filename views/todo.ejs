<!DOCTYPE html>

<html>
  <head>
    <title>To Do List</title>
  </head>

  <body>
    <h1>To Do List</h1>

    <ul>
      <% todolist.forEach(function(todo, index) { %>
        <li><a href="/todo/delete/<%= index %>">DEL</a> <%= todo %></li>
      <% }); %>
    </ul>

    <form action="/todo/add/" method="post">
      <p>
        <label for="newtodo">What should I do?</label>
        <input type="text" name="newtodo" autofocus id="newtodo" />
        <input type="submit" />
      </p>
    </form>
  </body>
</html>
